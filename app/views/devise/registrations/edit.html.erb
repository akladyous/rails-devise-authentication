    <div class="container mt-4">
        <div class="row justify-content-md-center">
            <div class="col col-lg-5 col-md-5 col-sm-5">
                <div class="card">
                    <div class="card-header text-center">
                        Update User Account
                    </div>
                    <div class="card-body">
                        <div class="user-avatar">
                            <%= image_tag("avatar.jpeg", size: '100x100', alt:'avatar', class: 'rounded mx-auto d-block') %>
                        </div>
                            <%# resource_name.to_s.humanize %>

                            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, "data-turbo": false }) do |f| %>
                                <%# render "devise/shared/error_messages", resource: resource %>

                                <div class="form-group mb-2">
                                    <%= f.label :email, { class: 'form-label'} %>
                                    <%= f.email_field :email, { class: 'form-control', autofocus: true, autocomplete: "off", }  %>
                                    <% if resource.errors.has_key? :email %>
                                        <%= content_tag :div,
                                            resource.errors.full_messages_for(:email).to_sentence,
                                            { class: ['d-block', 'invalid-feedback']} %>
                                    <% end %>
                                </div>

                                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                                    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                                <% end %>

                                <div class="form-group mb-2">
                                    <%= f.label :password, { class: 'form-label'} %>
                                    <span class="small">leave blank if you don't want to change it</span>

                                    <%= f.password_field :password, { class: "form-control ", autocomplete: "off", } %>
                                    <% if resource.errors.has_key? :password %>
                                        <%= content_tag :div, resource.errors.full_messages_for(:password).to_sentence, { class: ['d-block', 'invalid-feedback']} %>
                                    <% end %>
                                    <%# if @minimum_password_length %>
                                        <!-- <em><%# @minimum_password_length %> characters minimum</em> -->
                                    <%# end %>
                                </div>

                                <div class="form-group mb-2">
                                    <%= f.label :password_confirmation, { class: 'form-label'} %>
                                    <%= f.password_field :password_confirmation, { class: 'form-control', autocomplete: "off" } %>
                                    <%= feedback_for? :password_confirmation %>
                                </div>

                                <div class="form-group mb-2">
                                    <%= f.label :current_password, { class: 'form-label'} %>
                                    <i class="small">required to confirm your changes)</i>
                                    <%= f.password_field :current_password, { class: 'form-control', autocomplete: "off" } %>
                                    <%= feedback_for? :current_password %>
                                </div>

                                <div class="actions">
                                    <%= f.submit "Update" %>
                                </div>
                            <% end %>
                        <div class="form-group">
                            <%= render "devise/shared/links" %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>






<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

